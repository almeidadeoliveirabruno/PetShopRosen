@model Petshop.Models.Animal

@{
    ViewData["Title"] = "Editar Animal";
}

<style>
    /* ======== ESTILO DO CARD ======== */
    .card-custom {
        max-width: 600px;
        margin: 40px auto;
        padding: 30px;
        border-radius: 12px;
        background-color: #ffffff;
        box-shadow: 0 6px 20px rgba(0,0,0,0.1);
    }

    h2 {
        font-weight: 700;
        margin-bottom: 25px;
        color: #0d6efd;
        text-align: center;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 18px;
    }

    .form-group label {
        font-weight: 500;
        margin-bottom: 6px;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ced4da;
        padding: 10px 12px;
        width: 100%;
        box-sizing: border-box;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 5px rgba(13, 110, 253, 0.3);
    }

    .text-danger {
        font-size: 0.85rem;
        margin-top: 3px;
    }

    .btn-primary {
        background-color: #0d6efd;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        color: #fff;
        transition: background-color 0.2s;
    }

    .btn-primary:hover {
        background-color: #0b5ed7;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        margin-left: 10px;
        color: #fff;
        text-decoration: none;
    }

    .btn-secondary:hover {
        background-color: #5c636a;
    }

    .form-actions {
        display: flex;
        justify-content: center;
        margin-top: 25px;
    }
</style>

<div class="card-custom">
    <h2>Editar Animal</h2>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Especie">Espécie</label>
            <select asp-for="Especie" class="form-control">
                <option value="">-- Selecione --</option>
                <option value="Cachorro">Cachorro</option>
                <option value="Gato">Gato</option>
            </select>
            <span asp-validation-for="Especie" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Raca"></label>
            <input asp-for="Raca" class="form-control" />
            <span asp-validation-for="Raca" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DataNascimento">Data de Nascimento</label>
            <input asp-for="DataNascimento" class="form-control" type="date"
                   max="@DateTime.Today.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="DataNascimento" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClienteId"></label>
            <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
            <span asp-validation-for="ClienteId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PlanoId"></label>
            <select asp-for="PlanoId" class="form-control" asp-items="ViewBag.PlanoId"></select>
            <span asp-validation-for="PlanoId" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <input type="submit" value="Salvar" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
