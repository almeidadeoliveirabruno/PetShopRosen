@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Top 5 Clientes com Mais Animais";
}

<style>
    .table-modern {
        border-collapse: collapse;
        width: 100%;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 6px 18px rgba(0,0,0,0.08);
        background-color: #fff;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    }

        .table-modern th, .table-modern td {
            padding: 14px 18px;
            text-align: center;
            vertical-align: middle;
            transition: background-color 0.3s, color 0.3s;
        }

        .table-modern th {
            background-color: #ff6b9d;
            color: #fff;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.9rem;
        }

        .table-modern tbody tr:nth-child(even) {
            background-color: #f5f7fa;
        }

        .table-modern tbody tr:nth-child(odd) {
            background-color: #ffffff;
        }

        .table-modern tbody tr:hover {
            background-color: #d1e7ff;
            color: #000;
            font-weight: 500;
        }

    .card-custom {
        border: none;
        border-radius: 12px;
        background-color: #fff;
        padding: 20px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.05);
        transition: box-shadow 0.3s ease;
    }

        .card-custom:hover {
            box-shadow: 0 12px 30px rgba(0,0,0,0.1);
        }

    h2 {
        font-weight: 700;
        color: #0d6efd;
    }

    .btn-back {
        border-radius: 8px;
        padding: 8px 16px;
        font-weight: 600;
        color: #fff;
        background-color: #6c757d;
        text-decoration: none;
        transition: background-color 0.2s;
    }

        .btn-back:hover {
            background-color: #5c636a;
        }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }
</style>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <a asp-action="Index" class="btn-back">⬅ Voltar</a>
    </div>

    <div class="card card-custom shadow-sm">
        <table class="table-modern">
            <thead>
                <tr>
                    <th>🏆 Cliente</th>
                    <th>🐕 Quantidade de Animais</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    int posicao = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold text-center">
                                <span class="badge bg-secondary me-2">@posicao°</span>
                                @item.Nome
                            </td>
                            <td class="fw-bold text-dark text-center">@item.QuantidadeAnimais</td>
                        </tr>
                        posicao++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="text-center text-muted py-4">
                            Nenhum cliente encontrado 😕
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
