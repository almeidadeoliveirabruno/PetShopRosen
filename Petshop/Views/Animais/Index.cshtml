@model IEnumerable<Petshop.Models.Animal>

@{
    ViewData["Title"] = "Lista de Animais";
}

<style>
    /* ======== ESTILO DA TABELA ======== */
    .table-modern {
        border-collapse: collapse;
        width: 100%;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 6px 18px rgba(0,0,0,0.08);
        background-color: #fff;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    }

        .table-modern th, .table-modern td {
            padding: 14px 18px;
            text-align: center;
            vertical-align: middle;
            transition: background-color 0.3s, color 0.3s;
        }

        /* Cabeçalho com cor rosa do layout */
        .table-modern th {
            background-color: #ff6b9d; /* rosa do layout */
            color: #fff;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.9rem;
        }

        /* Linhas alternadas */
        .table-modern tbody tr:nth-child(even) {
            background-color: #f5f7fa;
        }

        .table-modern tbody tr:nth-child(odd) {
            background-color: #ffffff;
        }

        /* Hover */
        .table-modern tbody tr:hover {
            background-color: #d1e7ff; /* leve azul claro */
            color: #000;
            font-weight: 500;
        }

    /* Botões antigos mantidos */
    .btn-main {
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        color: #fff;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.2s;
    }

    .btn-new {
        background-color: #28a745;
    }
        /* verde */
        .btn-new:hover {
            background-color: #218838;
        }

    .btn-info {
        background-color: #0dcaf0;
    }
        /* azul claro */
        .btn-info:hover {
            background-color: #0bb5d8;
        }

    .btn-action {
        min-width: 80px;
        padding: 6px 10px;
        border-radius: 6px;
        font-weight: 600;
        transition: background-color 0.2s;
        border: none;
        cursor: pointer;
    }

    .btn-edit {
        background-color: #0d6efd;
        color: #fff;
    }

        .btn-edit:hover {
            background-color: #0b5ed7;
        }

    .btn-details {
        background-color: #6c757d;
        color: #fff;
    }

        .btn-details:hover {
            background-color: #5c636a;
        }

    .btn-delete {
        background-color: #dc3545;
        color: #fff;
    }

        .btn-delete:hover {
            background-color: #c82333;
        }

    /* Container e card */
    .card-custom {
        border: none;
        border-radius: 12px;
        background-color: #fff;
        padding: 20px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.05);
        transition: box-shadow 0.3s ease;
    }

        .card-custom:hover {
            box-shadow: 0 12px 30px rgba(0,0,0,0.1);
        }

    .top-actions {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
    }

    h2 {
        font-weight: 700;
        color: #0d6efd;
    }
</style>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <div class="top-actions">
            <a asp-action="Create" class="btn-main btn-new">+ Novo Animal</a>
            <a asp-action="FaixaEtaria" class="btn-main btn-info">📊 Ver Faixas Etárias</a>
        </div>
    </div>

    <div class="card card-custom shadow-sm">
        <table class="table-modern">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Espécie</th>
                    <th>Raça</th>
                    <th>Idade</th>
                    <th>Dono</th>
                    <th>Plano</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>@item.Especie</td>
                            <td>@item.Raca</td>
                            <td>@item.Idade anos</td>
                            <td>@item.Dono?.Nome</td>
                            <td>@item.PlanoAnimal?.Nome</td>
                            <td>
                                <div class="d-flex justify-content-center gap-1">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-action btn-edit">Editar</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn-action btn-details">Detalhes</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-action btn-delete">Excluir</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted py-4">
                            Nenhum animal cadastrado.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
