@{
    ViewData["Title"] = "Home Page";
}

<style>
    .welcome-section {
        text-align: center;
        padding: 60px 20px;
    }

        .welcome-section h1 {
            font-size: 3rem;
            font-weight: 700;
            color: #ff6b9d;
            margin-bottom: 15px;
        }

        .welcome-section p {
            font-size: 1.2rem;
            color: #555;
            margin-bottom: 40px;
        }

    .cards-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
    }

    .card {
        background-color: #ffe6f0; /* cor do card suave */
        border-radius: 16px;
        padding: 30px 25px;
        width: 220px;
        text-align: center;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 40px rgba(0,0,0,0.15);
        }

        .card h3 {
            font-size: 1.5rem;
            color: #e5517d;
            margin-bottom: 15px;
        }

        .card p {
            font-size: 1rem;
            color: #555;
            margin-bottom: 20px;
        }

        .card a {
            text-decoration: none;
            color: #fff;
            background-color: #ff6b9d;
            padding: 10px 18px;
            border-radius: 8px;
            font-weight: 600;
            transition: background-color 0.3s ease;
        }

            .card a:hover {
                background-color: #e5517d;
            }
</style>

<div class="welcome-section">
    <h1>Bem-vindo ao Petshop</h1>
    <p>Gerencie seus animais, clientes e planos de forma fácil e eficiente.</p>

    <div class="cards-container">
        <div class="card">
            <h3>Animais</h3>
            <p>Visualize e gerencie todos os animais cadastrados.</p>
            <a asp-controller="Animais" asp-action="Index">Acessar 🐶</a>
        </div>

        <div class="card">
            <h3>Clientes</h3>
            <p>Gerencie as informações dos clientes e seus pets.</p>
            <a asp-controller="Clientes" asp-action="Index">Acessar 👤</a>
        </div>

        <div class="card">
            <h3>Planos</h3>
            <p>Veja os planos disponíveis e suas características.</p>
            <a asp-controller="Planos" asp-action="Index">Acessar 📋</a>
        </div>
    </div>
</div>
