@model Petshop.Models.Animal

@{
    ViewData["Title"] = "Excluir Animal";
}

<style>
    /* ======== ESTILO DO CARD ======== */
    .card-custom {
        max-width: 600px;
        margin: 40px auto;
        padding: 30px;
        border-radius: 12px;
        background-color: #ffffff;
        box-shadow: 0 6px 20px rgba(0,0,0,0.1);
    }

    h2 {
        font-weight: 700;
        margin-bottom: 20px;
        color: #dc3545; /* vermelho para excluir */
        text-align: center;
    }

    /* ======== DETALHES ======== */
    .details-row {
        display: flex;
        margin-bottom: 12px;
    }

        .details-row dt {
            font-weight: 600;
            width: 150px; /* largura fixa para alinhamento */
            flex-shrink: 0;
            color: #495057;
        }

        .details-row dd {
            margin: 0;
            flex-grow: 1;
            color: #212529;
        }

    /* ======== BOTÕES ======== */
    .btn-danger, .btn-secondary {
        border-radius: 8px;
        padding: 8px 16px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        margin-right: 10px;
        transition: background-color 0.2s;
        color: #fff;
        border: none;
    }

    .btn-danger {
        background-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            color: #fff;
        }

    .btn-secondary {
        background-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5c636a;
            color: #fff;
        }

    .actions {
        text-align: center;
        margin-top: 25px;
    }

    .warning-text {
        text-align: center;
        font-weight: 500;
        margin-bottom: 20px;
        color: #dc3545;
    }
</style>

<div class="card-custom">
    <h2>Excluir Animal</h2>
    <p class="warning-text">Tem certeza que deseja excluir este animal?</p>

    <dl class="details">
        <div class="details-row">
            <dt>@Html.DisplayNameFor(model => model.Id)</dt>
            <dd>@Html.DisplayFor(model => model.Id)</dd>
        </div>
        <div class="details-row">
            <dt>@Html.DisplayNameFor(model => model.Nome)</dt>
            <dd>@Html.DisplayFor(model => model.Nome)</dd>
        </div>
        <div class="details-row">
            <dt>@Html.DisplayNameFor(model => model.Especie)</dt>
            <dd>@Html.DisplayFor(model => model.Especie)</dd>
        </div>
        <div class="details-row">
            <dt>@Html.DisplayNameFor(model => model.Raca)</dt>
            <dd>@Html.DisplayFor(model => model.Raca)</dd>
        </div>
        <div class="details-row">
            <dt>@Html.DisplayNameFor(model => model.Idade)</dt>
            <dd>@Html.DisplayFor(model => model.Idade)</dd>
        </div>
        <div class="details-row">
            <dt>@Html.DisplayNameFor(model => model.Dono)</dt>
            <dd>@Html.DisplayFor(model => model.Dono.Nome)</dd>
        </div>
        <div class="details-row">
            <dt>@Html.DisplayNameFor(model => model.PlanoAnimal)</dt>
            <dd>@Html.DisplayFor(model => model.PlanoAnimal.Nome)</dd>
        </div>
    </dl>

    <div class="actions">
        <form asp-action="Delete" method="post" style="display:inline;">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Excluir" class="btn btn-danger" />
        </form>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</div>
